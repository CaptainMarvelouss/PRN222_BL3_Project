@model IEnumerable<PRN222_BL3_Project.Models.BookingHistoryViewModel>

@{
    ViewData["Title"] = "Booking History";
}

<head>
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Public Sans', sans-serif;
        }

        /* Bảng */
        .table th, .table td {
            padding: 12px 15px;
            text-align: left;
        }

        .table th {
            background-color: #f8f9fa;
        }

        .table-striped tbody tr:nth-child(odd) {
            background-color: #f2f2f2;
        }

        .table-hover tbody tr:hover {
            background-color: #e9ecef;
        }

        .table-responsive {
            margin-top: 20px;
        }
    </style>
</head>

<div class="container mt-5">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <!-- Form tìm kiếm -->
    <form method="get" class="row g-2 mb-3">
        <div class="col-md-3">
            <input type="text" name="keyword" value="@ViewData["Keyword"]" class="form-control"
                   placeholder="Tìm theo tên sân..." />
        </div>
        <div class="col-md-3">
            <input type="date" name="fromDate" value="@ViewData["FromDate"]" class="form-control" />
        </div>
        <div class="col-md-3">
            <input type="date" name="toDate" value="@ViewData["ToDate"]" class="form-control" />
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-primary w-100">Tìm</button>
        </div>
    </form>

    <!-- Bảng lịch sử đặt -->
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>Ngày đặt</th>
                    <th>Sân</th>
                    <th>Khung giờ</th>
                    <th>Giá</th>
                    <th>Trạng thái</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var b in Model)
                    {
                        <tr>
                            <td>@b.BookingDate.ToString("yyyy-MM-dd")</td>
                            <td>@b.FieldName</td>
                            <td>@b.TimeSlots</td>
                            <td>@b.TotalPrice.ToString("N0")</td>
                            <td>@b.Status</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">Không có dữ liệu</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
